                    <text style="font-size:34rpx;color:#FF6600;">{{item.orderPrice}}</text>
                  </view>
                </view>
              </view>
              <view class="item-bottom-button-view" wx:if="{{item.orderState==0}}">
                <view class="bottom-default-button">取消订单</view>
                <view class="bottom-checked-button">付款</view>
              </view>
              <view class="item-bottom-button-view" wx:if="{{item.orderState==1}}">
                <view class="bottom-default-button">再次预定</view>
