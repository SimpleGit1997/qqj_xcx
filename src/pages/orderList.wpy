                  <view class="item-tag-view"></view>
                  <view class="item-totel-name-view">{{item.hotelTitle}}</view>
                  <view class="item-arrow-icon-view">
                    <image style="width:100%;height:100%;" src="../images/arrow-right-icon.png" />
