<style lang="less">
  .top-state-label-view {
    width: 100%;
    height: 88rpx;
    line-height: 88rpx;
    background-color: #ffffff;
    display: flex;
    justify-content: center;
  }
  .item-state-label-view {
    height: 84rpx;
    line-height: 84rpx;
