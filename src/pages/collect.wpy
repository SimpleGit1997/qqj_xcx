  }
  .abs-hotel-price-label-view {
    position: absolute;
    right: 0rpx;
    top: 70rpx;
    height: 56rpx;
    display: flex;
    color: #FF6600;
    font-size: 40rpx;
  }
  .abs-mid-warning-view {
    width: 200rpx;
    position: absolute;
    top: 320rpx;
    left: 276rpx;
  }
  .mid-img-view {
    width: 80rpx;
    height: 80rpx;
    margin: 0px auto;
  }
  .mid-text-view {
    width: 100%;
    height: 40rpx;
    color: #999999;
    font-size: 28rpx;
    text-align: center;
    margin: 20rpx auto 40rpx auto;
  }
  .mid-button-view {
    width: 200rpx;
    height: 60rpx;
    line-height: 60rpx;
    border: 2rpx solid #FF6600;
