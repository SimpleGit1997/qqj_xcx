.top-state-label-view {
  width: 100%;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #ffffff;
  display: flex;
  justify-content: center;
}
.item-state-label-view {
  width: 100rpx;
  height: 84rpx;
  line-height: 84rpx;
  text-align: center;
  color: #333333;
  font-size: 28rpx;
}
.checked {
  border-bottom: 4rpx solid #FA8C1D;
  font-weight: 500;
}
.swiper-view {
  width: 100%;
}
.item-label-view {
  width: 710rpx;
  background-color: #ffffff;
  margin: 20rpx auto 0px auto;
}
.item-title-view {
  width: 100%;
  height: 72rpx;
  line-height: 72rpx;
  display: flex;
  justify-content: space-between;
}
.item-title-view {
  display: flex;
}
.item-hotel-img-view {
  width: 26rpx;
  height: 26rpx;
  margin: 22rpx 10rpx 24rpx 20rpx;
}
.item-hotel-text-view {
  font-size: 24rpx;
  color: #333333;
  line-height: 72rpx;
}
.item-left-view {
  display: flex;
}
.item-tag-view {
  width: 2rpx;
  height: 20rpx;
  background-color: #DDDDDD;
  margin: 26rpx 20rpx;
}
.item-totel-name-view {
  font-size: 24rpx;
  color: #333333;
  font-weight: 600;
  line-height: 72rpx;
}
.item-arrow-icon-view {
  width: 30rpx;
  height: 30rpx;
  margin: 20rpx 0px 20rpx 0px;
}
.item-right-view {
  margin-right: 20rpx;
  font-size: 24rpx;
  color: #FF6600;
  line-height: 72rpx;
}
.item-hotel-info-view {
  width: 670rpx;
  height: 170rpx;
  margin: 0px auto;
  box-sizing: border-box;
  border-bottom: 2rpx dashed #D3D3D3;
  display: flex;
}
.item-hotel-info-title-text-view {
  width: 540rpx;
  padding-left: 20rpx;
  box-sizing: border-box;
  height: 150rpx;
  position: relative;
}
.item-hotel-info-text-view {
  width: 100%;
  height: 32rpx;
  font-size: 26rpx;
  color: #333333;
  font-weight: 400;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.item-hotel-info-date-view {
  width: 100%;
  height: 32rpx;
  font-size: 26rpx;
  color: #666666;
  font-weight: 400;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.item-abs-price-view {
  display: flex;
  position: absolute;
  bottom: 0;
  right: 0;
  height: 30rpx;
}
.item-bottom-button-view {
  width: 100%;
  height: 92rpx;
  display: flex;
  justify-content: flex-end;
  background-color: #ffffff;
}
.bottom-default-button {
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
  background-color: #ffffff;
  border-radius: 26rpx;
  border: 2rpx solid #DDDDDD;
  text-align: center;
  font-size: 28rpx;
  color: #333333;
  margin: 22rpx 20rpx 0px 0px;
}
.bottom-default-button:active {
  opacity: 0.7;
}
.bottom-checked-button {
  width: 160rpx;
  height: 50rpx;
  line-height: 50rpx;
  background: linear-gradient(90deg, #fa8c1d 0%, #fcad3e 100%);
  border-radius: 26rpx;
  border: 2rpx solid #FA8C1D;
  text-align: center;
  font-size: 28rpx;
  color: #ffffff;
  margin: 22rpx 20rpx 0px 0px;
}
.bottom-checked-button:active {
  opacity: 0.7;
}
