
  <view class="body">
    <view class="search-input-view">
      <view class="search-inner-input-view">
        <view class="inner-city-label-view">{{cityInfo.name}}</view>
        <view class="inner-tag-view"/>
        <view class="inner-date-label-view">
          <view style="height:30rpx;line-height:35rpx;">
            <text>住</text>
            <text>{{formatDate[0]}}</text>
          </view>
          <view style="height:30rpx;line-height:25rpx;">
            <text>离</text>
            <text>{{formatDate[1]}}</text>
          </view>
        </view>
        <view class="inner-tag-view"/>
        <image class="search-icon-image" src="../images/search-icon.png"/>
        <input class="search-input" placeholder-class="placeholder-search-input" placeholder="搜索酒店关键字" bindconfirm="searchSubmit" confirm-type="search" bindinput="searchInput" value="{{keyword}}"/>
      </view>
    </view>
    <view class="search-query-label-view">
      <view class="item-label-view {{tempObj.index==0?'checked-type':''}}" bindtap="handleType" data-wpyhandletype-a="0">
        <text>价格星级</text>
        <image  wx:if="{{tempObj.index==0&&tempObj.checked}}" class="item-arrow-icon-img" src="../images/arrow-bottom-selected-icon.png"/>
        <image  wx:else="{{!tempObj.checked}}" class="item-arrow-icon-img" src="../images/arrow-top-icon.png"/>
      </view>
      <view class="item-label-view {{tempObj.index==1?'checked-type':''}}" bindtap="handleType" data-wpyhandletype-a="1">
        <text>位置</text>
        <image wx:if="{{tempObj.index==1&&tempObj.checked}}" class="item-arrow-icon-img" src="../images/arrow-bottom-selected-icon.png"/>
        <image wx:else="{{!tempObj.checked}}" class="item-arrow-icon-img" src="../images/arrow-top-icon.png"/>
      </view>
      <view class="item-label-view {{tempObj.index==2?'checked-type':''}}" bindtap="handleType" data-wpyhandletype-a="2">
        <text>筛选</text>
        <image wx:if="{{tempObj.index==2&&tempObj.checked}}" class="item-arrow-icon-img" src="../images/arrow-bottom-selected-icon.png"/>
        <image wx:else="{{!tempObj.checked}}" class="item-arrow-icon-img" src="../images/arrow-top-icon.png"/>
      </view>
      <view class="item-label-view {{tempObj.index==3?'checked-type':''}}" bindtap="handleType" data-wpyhandletype-a="3">
        <text>排序</text>
        <image wx:if="{{tempObj.index==3&&tempObj.checked}}" class="item-arrow-icon-img" src="../images/arrow-bottom-selected-icon.png"/>
        <image wx:else="{{!tempObj.checked}}" class="item-arrow-icon-img" src="../images/arrow-top-icon.png"/>
      </view>
    </view>
    <scroll-view style="height:{{scrollHeight}}rpx;width:100%;" scroll-y lower-threshold="0" bindscrolltolower="scrolltolower">
      <block wx:for="{{hotelList}}" wx:for-index="index" wx:for-item="item" wx:key="index">
        <view class="default-label-row-view">
          <view class="default-inner-label-row-view {{index+1===hotelList.length?'':'border-bottom'}}" bindtap="handleHotel" data-wpyhandlehotel-a="{{index}}">
            <image lazy-load="lazy-load" binderror="imgError" data-errorIndex="{{index}}" class="hotel-img" src="{{item.imageUrl?item.imageUrl:'../images/default-hotel-img.png'}}"/>
            <view class="hotel-info-label-view">
              <view class="hotel-name-label-view">{{item.hotelName}}</view>
              <view class="hotel-comment-label-view">
                <view wx:if="{{!item.commentNum&&!item.commentScore}}">暂无点评数据</view>
                <view wx:else>
                  <text style="color:#FF6600;">{{item.commentScore}}分</text> 来自 <text style="color:#FF6600;">{{item.commentNum}}</text>条点评
                </view>
              </view>
              <view class="hotel-type-label-view" wx:if="{{item.starName||item.renovationDate}}">
                <view>{{item.starName}}</view>
                <view wx:if="{{item.renovationDate}}" class="type-tag-view"/>
                <view wx:if="{{item.renovationDate}}">{{item.renovationDate}}装修</view>
              </view>
              <view class="hotel-position-label-view">{{item.address}}</view>
            </view>
            <view class="abs-hotel-price-label-view">
              <text style="font-size:20rpx;line-height:66rpx;">¥</text>
              <text style="font-weight:600;line-height:56rpx;">{{item.price}}</text>
              <text style="font-size:20rpx;color:#333333;line-height:66rpx;">起</text>
            </view>
          </view>
        </view>
      </block>
    </scroll-view>
    <view wx:if="{{showModal}}" class="modal-mask" bindtap="hideModal" catchtouchmove="preventTouchMove"/>
    <view class="modal-dialog" catchtouchmove="preventTouchMove">
      <view wx:if="{{tempObj.index==0&&tempObj.checked}}">
        <view class="pop-label-view">
          <view class="pop-label-view-peice">
            <text class="pop-label-view-title">价格</text>
            <view>
              <view class="pop-label-view-star-menus">
                <block wx:for="{{priceList}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                  <view class="pop-label-view-star-menu {{item.checked?'checked-menu':''}}" bindtap="handlePrice" data-wpyhandleprice-a="{{index}}">￥{{item.label}}</view>
                </block>
              </view>
            </view>
          </view>
          <view class="pop-label-view-star">
            <text class="pop-label-view-title">星级</text>
            <view class="pop-label-view-star-menus">
              <block wx:for="{{starList}}" wx:for-index="index" wx:for-item="item" wx:key="index">
                <view class="pop-label-view-star-menu {{item.checked?'checked-menu':''}}" bindtap="handleStar" data-wpyhandlestar-a="{{index}}">{{item.label}}</view>
              </block>
            </view>
          </view>
        </view>
        <view class="popup-bottom-label-view">
          <button class="pop-label-view-button" hover-class="reset-hover-class" style="background:#404040" bindtap="handleResetStarAndPrice">重置</button>
          <button class="pop-label-view-button" hover-class="submit-hover-class" style="background:#FCAD3E" bindtap="handleConfirmsStarAndPrice">确定</button>
        </view>
      </view>
      <view wx:if="{{tempObj.index==1&&tempObj.checked}}">
        <view class="popup-scroll-view">
          <scroll-view style="height:{{600}}rpx;width:250rpx;border-right:1rpx solid #eeeeee;box-sizzing:border-box;" scroll-y>
            <block wx:for="{{positionOption}}" wx:for-index="index" wx:for-item="item" wx:key="index">
              <view bindtap="handleOptionIndex" class="scroll-left-row-view {{optionIndex==index?'checked-label':''}}" data-wpyhandleoptionindex-a="{{index}}">{{item}}</view>
            </block>
          </scroll-view>
          <scroll-view style="height:{{600}}rpx;width:500rpx;background-color:#fff;" scroll-y>
            <!-- 距离 -->
            <block wx:if="{{optionIndex==0}}" wx:for="{{distanceList}}" wx:for-index="index" wx:for-item="item" wx:key="index">
              <view class="scroll-right-row-view {{distance==item.value?'checked-region-label':''}}" bindtap="handleDistance" data-wpyhandledistance-a="{{index}}">
                <view>{{item.label}}</view>
                <image wx:if="{{distance==item.value}}" class="hook-icon-img" src="../images/hook-selected-icon.png"/>
              </view>
            </block>
            <!-- 行政区域 -->
            <block wx:if="{{optionIndex==1}}" wx:for="{{regionList}}" wx:for-index="index" wx:for-item="item" wx:key="index">
              <view class="scroll-right-row-view {{regionId==item.id?'checked-region-label':''}}" bindtap="handleRegion" data-wpyhandleregion-a="{{index}}">
                <view>{{item.name}}</view>
                <image wx:if="{{regionId==item.id}}" class="hook-icon-img" src="../images/hook-selected-icon.png"/>
              </view>
            </block>
          </scroll-view>
        </view>
        <view class="popup-bottom-label-view">
          <button class="pop-label-view-button" hover-class="reset-hover-class" style="background:#404040" bindtap="handleResetPosition">重置</button>
          <button class="pop-label-view-button" hover-class="submit-hover-class" style="background:#FCAD3E" bindtap="handleConfirmsPosition">确定</button>
        </view>
      </view>
      <view wx:if="{{tempObj.index==2&&tempObj.checked}}">
        <view class="popup-scroll-view">
          <scroll-view style="height:{{600}}rpx;width:250rpx;border-right:1rpx solid #eeeeee;box-sizzing:border-box;" scroll-y>
            <block wx:for="{{typeOption}}" wx:for-index="index" wx:for-item="item" wx:key="index">
              <view bindtap="handleTypeIndex" class="scroll-left-row-view {{typeIndex==index?'checked-label':''}}" data-wpyhandletypeindex-a="{{index}}">{{item}}</view>
            </block>
          </scroll-view>
          <scroll-view style="height:{{600}}rpx;width:500rpx;background-color:#fff;" scroll-y>
            <!-- 床型 -->
            <block wx:if="{{typeIndex==0}}" wx:for="{{bedTypeList}}" wx:for-index="index" wx:for-item="item" wx:key="index">
              <view class="scroll-right-row-view {{bedType==item.value?'checked-region-label':''}}" bindtap="handleBedType" data-wpyhandlebedtype-a="{{index}}">
                <view>{{item.label}}</view>
                <image wx:if="{{bedType==item.value}}" class="hook-icon-img" src="../images/hook-selected-icon.png"/>
              </view>
            </block>
            <!-- 早餐 -->
            <block wx:if="{{typeIndex==1}}" wx:for="{{breakfastTypeList}}" wx:for-index="index" wx:for-item="item" wx:key="index">
              <view class="scroll-right-row-view {{breakfastType==item.value?'checked-region-label':''}}" bindtap="handleBreakfast" data-wpyhandlebreakfast-a="{{index}}">
                <view>{{item.label}}</view>
                <image wx:if="{{breakfastType==item.value}}" class="hook-icon-img" src="../images/hook-selected-icon.png"/>
              </view>
            </block>
          </scroll-view>
        </view>
        <view class="popup-bottom-label-view">
          <button class="pop-label-view-button" hover-class="reset-hover-class" style="background:#404040" bindtap="handleResetType">重置</button>
          <button class="pop-label-view-button" hover-class="submit-hover-class" style="background:#FCAD3E" bindtap="handleConfirmsType">确定</button>
        </view>
      </view>
      <view wx:if="{{tempObj.index==3&&tempObj.checked}}">
        <view class="popup-scroll-view">
          <scroll-view style="height:{{360}}rpx;width:100%;background-color:#fff;" scroll-y>
            <block wx:for="{{orderByTypeList}}" wx:for-index="index" wx:for-item="item" wx:key="index">
              <view class="scroll-right-row-view {{orderByType==item.value?'checked-region-label':''}}" bindtap="handleOrder" data-wpyhandleorder-a="{{index}}">
                <view>{{item.label}}</view>
                <image wx:if="{{orderByType==item.value}}" class="hook-icon-img" src="../images/hook-selected-icon.png"/>
              </view>
            </block>
          </scroll-view>
        </view>
      </view>
    </view>
  </view>