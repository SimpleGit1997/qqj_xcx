                <view class="bottom-default-button">再次预定</view>
                <view class="bottom-default-button">退订</view>
              </view>
              <view class="item-bottom-button-view" wx:if="{{item.orderState==3 && !item.commentInfo}}">
                <view class="bottom-default-button">再次预定</view>
              </view>
              <view class="item-bottom-button-view" wx:if="{{item.orderState==4 || item.orderState==6 || item.orderState==7 || item.orderState==8}}">
                <view class="bottom-default-button">再次预定</view>
              </view>
            </view>
          </block>
        </scroll-view>
      </swiper-item>
    </swiper>
  </view>