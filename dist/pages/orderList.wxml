
  <view class="body">
    <view class="top-state-label-view">
      <view bindtap="handleState" class="item-state-label-view {{query.orderState==-2?'checked':''}}" style="margin-right:50rpx;" data-wpyhandlestate-a="-2">进行中</view>
      <view bindtap="handleState" class="item-state-label-view {{query.orderState==-3?'checked':''}}" data-wpyhandlestate-a="-3">已结束</view>
    </view>
    <swiper duration="{{300}}" bindchange="changeSwiper" current="{{swiperIndex}}" class="swiper-view" style="height:{{scrollHeight}}rpx;">
      <swiper-item>
        <scroll-view style="height:{{scrollHeight}}rpx;width:100%;" scroll-y lower-threshold="0" bindscrolltolower="scrolltolower">
          <view style="overflow:hidden;"/>
          <block wx:for="{{orderList}}" wx:for-index="index" wx:for-item="item" wx:key="index">
            <view class="item-label-view">
              <view class="item-title-view">
                <view class="item-left-view">
                  <view class="item-hotel-img-view">
                    <image style="width:100%;height:100%;" src="../images/hotel-icon-img.png"/>
                  </view>
                  <view class="item-hotel-text-view">全球家</view>
                  <view class="item-tag-view"/>
                  <view class="item-totel-name-view">{{item.hotelTitle}}</view>
                  <view class="item-arrow-icon-view">
                    <image style="width:100%;height:100%;" src="../images/arrow-right-icon.png"/>
                  </view>
                </view>
                <view class="item-right-view">
                  {{item.orderStateLabel}}
                </view>
              </view>
              <view class="item-hotel-info-view">
                <image style="width:150rpx;height:150rpx;" src="../images/default-hotel-img.png"/>
                <view class="item-hotel-info-title-text-view">
                  <view class="item-hotel-info-text-view">
                    {{item.title}}
                  </view>
                  <view class="item-hotel-info-date-view" data-item="{{item}}">
                    {{item.formatFirstTime}} - {{item.formatSecondTime}} 共{{item.days}}晚
                  </view>
                  <view class="item-abs-price-view">
                    <text style="font-size:24rpx;color:#333333;">合计：</text>
                    <text style="font-size:20rpx;color:#FF6600;line-height:46rpx;">￥</text>
                    <text style="font-size:34rpx;color:#FF6600;">{{item.orderPrice}}</text>
                  </view>
                </view>
              </view>
              <view class="item-bottom-button-view"  wx:if="{{item.orderState==0}}">
                <view class="bottom-default-button">取消订单</view>
                <view class="bottom-checked-button">付款</view>
              </view>
              <view class="item-bottom-button-view"  wx:if="{{item.orderState==1}}">
                <view class="bottom-default-button">再次预定</view>
                <view class="bottom-default-button">退订</view>
              </view>
              <view class="item-bottom-button-view" wx:if="{{item.orderState==9}}">
                <view class="bottom-default-button">再次预定</view>
                <view class="bottom-default-button">退订</view>
              </view>
              <view class="item-bottom-button-view" wx:if="{{item.orderState==3 && !item.commentInfo}}">
                <view class="bottom-default-button">再次预定</view>
              </view>
              <view class="item-bottom-button-view" wx:if="{{item.orderState==4 || item.orderState==6 || item.orderState==7 || item.orderState==8}}">
                <view class="bottom-default-button">再次预定</view>
              </view>
            </view>
          </block>
        </scroll-view>
      </swiper-item>
